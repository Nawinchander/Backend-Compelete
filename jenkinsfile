pipeline {
  agent any

  stages {
    stage('Install') {
      steps {
        sh 'npm install'
      }
    }

    stage('Test') {
      steps {
        echo "No tests yet"
      }
    }

    stage('Build Docker Image') {
      steps {
        sh 'docker build -t simple-backend .'
      }
    }
  }
}
